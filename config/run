HOME=/projects/tcamp
PIDFILE=$HOME/data/pidfile
SOCKET=unix:$HOME/data/socket
WORKERS=4
CODEROOT=$HOME/src/current

if [-f $PIDFILE]; then
    PID=`cat $PIDFILE`
    echo "killing process $PID"
    kill $PID
fi

/usr/bin/env python $CODEROOT/manage.py run_gunicorn -b $SOCKET -w $WORKERS --daemon --log-file=$HOME/log/gunicorn.log --preload
